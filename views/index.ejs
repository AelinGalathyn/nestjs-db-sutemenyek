<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Sütemények</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel='stylesheet' type='text/css' media='screen' href='main.css'>
    <script src='main.js'></script>
</head>
<body>
    <h1>Sütemények</h1>
    <button onclick="window.location.href = '/ujSuti'" type="button">Új süti</button>
    <ul>
      <% sutemenyek.forEach((suti) => { %>
        <li>
          <a href="/sutemenyek/<%= suti.id %>">
            <%= suti.nev %>
          </a>
          <form method="post" action="/sutemenyek/<%= suti.id %>?_method=DELETE">
            <button type="submit">Törlés</button>
          </form>
          <form method="get" action="/modosit/<%= suti.id %>">
            <button type="submit">Módosítás</button>
          </form>
        </li>
      <% }) %>
    </ul>
</body>
</html>
